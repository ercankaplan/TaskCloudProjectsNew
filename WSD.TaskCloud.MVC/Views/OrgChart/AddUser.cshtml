@{
    Layout = null;
}
@model WSD.TaskCloud.Contracts.DataContracts.OrgChart.AddUserRequest
<div>

    @using (Html.BeginForm("AddUserPost", "OrgChart", FormMethod.Post, new { enctype = "multipart/form-data", id = "yeniKayit", autocomplete = "off" }))
    {
        <div class="row rowStyle" align="left">
            <fieldset>
                <div class="row row-type1">
                    <div class="col-md-5 col-sm-5 row-sep">
                        <div class="col-md-4 paddingFixer row-sep">
                            @Html.StarredLabelFor(m => m.DepartmentID)
                        </div>
                        <div class="col-md-8 paddingFixer row-sep">
                            @(Html.Kendo().DropDownList()
                              .Name("DepartmentID")
                              .DataTextField("Name")
                              .DataValueField("DepartmentID")
                              .DataSource(source =>
                              {
                                  source.Read(read =>
                                  {
                                      read.Action("_GetDepartments", "OrgChart");
                                  });
                              })
                              .HtmlAttributes(new { @class = "TextBoxDropDown", style = "max-width:290px" })
                            )
                        </div>
                    </div>
                    <div class="col-md-5 col-sm-5 row-sep">
                        <div class="col-md-4 paddingFixer row-sep">
                            @Html.StarredLabelFor(m => m.RoleID)
                        </div>
                        <div class="col-md-8 paddingFixer row-sep">
                            @(Html.Kendo().DropDownList()
                              .Name("RoleID")
                              .DataTextField("Name")
                              .DataValueField("RoleID")
                              .DataSource(source =>
                              {
                                  source.Read(read =>
                                  {
                                      read.Action("_GetRoles", "OrgChart");
                                  });
                              })
                              .HtmlAttributes(new { @class = "TextBoxDropDown", style = "max-width:290px" })

                            )
                        </div>
                    </div>
                </div>
                <div class="row row-type2">
                    <div class="col-md-5 col-sm-5 row-sep">
                        <div class="col-md-4 paddingFixer row-sep">
                            @Html.StarredLabelFor(m => m.UserName)
                        </div>
                        <div class="col-md-8 paddingFixer row-sep">
                            @(Html.TextBoxFor(i => i.UserName, new { @class = "TextBoxClass", style = "max-width:290px", autocomplete = "off", value = "" }))
                        </div>
                    </div>
                    <div class="col-md-5 col-sm-5 row-sep">
                        <div class="col-md-4 paddingFixer row-sep">
                            @Html.StarredLabelFor(m => m.PasswordField)
                        </div>
                        <div class="col-md-8 paddingFixer row-sep">
                            @(Html.TextBoxFor(i => i.PasswordField, new { @class = "TextBoxClass", type = "password", style = "max-width:290px", autocomplete = "off", value = "" }))
                        </div>
                    </div>
                </div>
                <div class="row row-type1">
                    <div class="col-md-5 col-sm-5 row-sep">
                        <div class="col-md-4 paddingFixer row-sep">
                            @Html.StarredLabelFor(m => m.FirstName)
                        </div>
                        <div class="col-md-8 paddingFixer row-sep">
                            @(Html.TextBoxFor(i => i.FirstName, new { @class = "TextBoxClass", style = "max-width:290px" }))
                        </div>
                    </div>
                    <div class="col-md-5 col-sm-5 row-sep">
                        <div class="col-md-4 paddingFixer row-sep">
                            @Html.StarredLabelFor(m => m.LastName)
                        </div>
                        <div class="col-md-8 paddingFixer row-sep">
                            @(Html.TextBoxFor(i => i.LastName, new { @class = "TextBoxClass", style = "max-width:290px" }))
                        </div>
                    </div>
                </div>
                <div class="row row-type2">
                    <div class="col-md-5 col-sm-5 row-sep">
                        <div class="col-md-4 paddingFixer row-sep">
                            @Html.StarredLabelFor(m => m.Mobile)
                        </div>
                        <div class="col-md-8 paddingFixer row-sep">
                            @(Html.Kendo().MaskedTextBoxFor(i => i.Mobile)
                             .Mask("(999) 000-0000")
                             .HtmlAttributes(new { @class = "TextBoxClass", style = "max-width:290px" })
                            )
                        </div>
                    </div>
                    <div class="col-md-5 col-sm-5 row-sep">
                        <div class="col-md-4 paddingFixer row-sep">
                            @Html.StarredLabelFor(m => m.Email)
                        </div>
                        <div class="col-md-8 paddingFixer row-sep">
                            @(Html.TextBoxFor(i => i.Email, new { @class = "TextBoxClass", style = "max-width:290px" }))
                        </div>
                    </div>
                </div>
                <div class="row row-type1 paddingFixer">
                    <div class="col-md-5 col-sm-5 row-sep">
                        <div class="col-md-4 paddingFixer row-sep">
                            @Html.StarredLabelFor(m => m.Logo)
                        </div>
                        <div class="col-md-8 paddingFixer row-sep">
                            @(Html.Kendo().Upload()
                                .Name("LogoImg")
                                .Multiple(false)
                                .HtmlAttributes(new { id = "files", style = "max-width:290px;", accept = ".jpg" })
                                .Events(i => i.Select("SelectedFile").Remove("RemovedFile"))
                            )
                        </div>
                    </div>
                    <div class="col-md-5 col-sm-5 row-sep">
                        <div class="col-md-4 paddingFixer row-sep">
                            @Html.StarredLabelFor(m => m.RegistryNum)
                        </div>
                        <div class="col-md-8 paddingFixer row-sep">
                            @(Html.TextBoxFor(i => i.RegistryNum, new { @class = "TextBoxClass", style = "max-width:290px !important;width:100px;" }))
                        </div>
                    </div>
                </div>
                <div class="row row-type1">
                    <div class="col-md-5 col-sm-5 row-sep">
                        <div class="col-md-4 paddingFixer row-sep">

                        </div>
                        <div class="col-md-7 paddingFixer row-sep">
                            <div id="imgDiv">
                                <img src="/Content/img/no-avatar.jpg" width="50" />
                            </div>
                        </div>
                    </div>

                </div>
            </fieldset>
            <div class="row row-type1">
                <div class="col-md-4 col-sm col-sm-offset-2 col-sm-4 col-md-offset-4">
                    <button type="submit" class="btn btn-success btn-block" id="sorgulaBtn" style="max-width:410px">Kaydet</button>
                </div>
            </div>
        </div>
    }
</div>

<script>
    $(function () {
        var validator = $("#yeniKayit").kendoValidator().data("kendoValidator");
    });
</script>
<style>
    .k-widget.k-upload.k-header.k-upload-sync.k-upload-empty {
        max-width: 290px;
    }
    .k-widget.k-upload.k-header.k-upload-sync {
        max-width: 290px;
    }
</style>